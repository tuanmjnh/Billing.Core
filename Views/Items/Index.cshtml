       data-search="true"
       data-show-refresh="true"
       data-show-toggle="true"
       data-show-columns="true"
       data-show-export="false"
       data-detail-view="false"
       data-detail-formatter="detailFormatter"
       data-minimum-count-columns="2"
       data-show-pagination-switch="true"
       data-pagination="true"
       data-id-field="id"
       data-page-list="[10, 25, 50, 100, 200, 500]"
       data-show-footer="false"
       data-side-pagination="server"
       data-response-handler="responseHandler"
       data-query-params="queryParams"
       data-url="Items"
       data-url-select="Select"
       data-url-create="Insert"
       data-url-edit="Update">
    <thead class="thead-light">
        <tr>
            <th data-events="chkEvents" data-field="state" data-checkbox="true" data-valign="middle">#</th>
            <th data-field="APPKEY" data-sortable="true" data-editable="true" data-valign="middle" class="">Key</th>
            <th data-field="TITLE" data-sortable="true" data-editable="true" data-valign="middle">Tên mục</th>
            <th data-field="GROUPTITLE" data-sortable="true" data-editable="true" data-valign="middle">Tên nhóm</th>
            <th data-events="cmdEvents" data-formatter="cmdFormatter" data-align="center" data-valign="middle" data-width="60">#</th>
