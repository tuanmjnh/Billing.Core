                                    <label class="col-md-4 col-form-label required">Trạng thái</label>
                                    <div class="btn-group" role="group" data-toggle="buttons">
                                        <label class="btn btn-secondary active">
                                            <span>Sử dụng</span>
                                            <input type="radio" hidden name="FLAG" value="1" autocomplete="off" checked>
                                        </label>
                                        <label class="btn btn-secondary">
                                            <span>Nháp</span>
                                            <input type="radio" hidden name="FLAG" value="0" autocomplete="off">
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer"><label class="text-warning">Vui lòng nhập đầy đủ các trường có dấu (*)</label></div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Ghi chú</h5>
                    </div>
                    <div class="card-body">
                        <textarea id="GHICHU" name="GHICHU" class="tinymce"></textarea>
                    </div>
                    <div class="card-footer">
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label class="col-md-4 col-form-label">Người tạo</label>
                                <label class="col-md-4 col-form-label" tm-form="CREATEDBY"></label>
                            </div>
                            <div class="col-md-6">
                                <label class="col-md-4 col-form-label">Ngày tạo</label>
                                <label class="col-md-4 col-form-label" tm-form="CREATEDAT" moment-fomat="DD/MM/YYYY"></label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label class="col-md-4 col-form-label">Người sửa</label>
                                <label class="col-md-4 col-form-label" tm-form="UPDATEDBY"></label>
                            </div>
                            <div class="col-md-6">
                                <label class="col-md-4 col-form-label">Ngày sửa</label>
                                <label class="col-md-4 col-form-label" tm-form="UPDATEDAT" moment-fomat="DD/MM/YYYY"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnCreate" type="submit" class="btn btn-primary">Cập nhật</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Quay lại</button>
            </div>
        </div>
    </div>
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/site.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/validator.unobtrusive.parseDynamicContent.js"></script>
    <script>
        $(function () {
            formGet({
                url: $controllerUrl + 'Get', data: { id: $(FormModal).find('[name="id"]').val() }, form: FormModal,
                success: function (d) {},
                done: function () {
                    var _array = $('#PROFILEIP').val().split(',');
                    var rs = '';
                    if (_array.length>0)
                    for (var i = 1; i < _array.length-1; i++) {
                        rs += _array[i] + ', ';
                        }
                    $('#PROFILEIP').val(rs.substring(0, rs.length - 2));
                }
            });
        });
        $(FormModal).FormPost({ url: $controllerUrl + 'InsertUpdate', id: $(FormModal).find('[name="id"]').val(), resetForm: false, done: function () { $($table).bootstrapTable('refresh') } });
    </script>
</div>
